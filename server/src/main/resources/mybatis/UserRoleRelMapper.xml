<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dsc.jk.mapper.UserRoleRelMapper">

    <!-- Base Result Map -->
    <resultMap id="baseResultMap" type="cn.dsc.jk.entity.UserRoleRelEntity">
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
    </resultMap>

    <!-- Base Column List -->
    <sql id="Base_Column_List">
        user_id,
        role_id
    </sql>

    <!-- Select role IDs by user ID -->
    <select id="selectRoleIdsByUserId" resultType="java.lang.Long">
        SELECT role_id
        FROM user_role_rel
        WHERE user_id = #{userId}
    </select>

    <!-- Select user IDs by role ID -->
    <select id="selectUserIdsByRoleId" resultType="java.lang.Long">
        SELECT user_id
        FROM user_role_rel
        WHERE role_id = #{roleId}
    </select>

    <!-- Select by user IDs -->
    <select id="selectByUserIds" resultMap="baseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM user_role_rel
        WHERE user_id IN <foreach collection="userIds" item="userId" separator="," open="(" close=")">#{userId}</foreach>
    </select>

    <!-- Delete by user ID -->
    <delete id="deleteByUserId">
        DELETE FROM user_role_rel
        WHERE user_id = #{userId}
    </delete>

    <!-- Batch insert -->
    <insert id="insertBatch">
        INSERT INTO user_role_rel
        (user_id, role_id)
        VALUES
        <foreach collection="userRoles" item="userRole" separator=",">
            (#{userRole.userId}, #{userRole.roleId})
        </foreach>
    </insert>

    <!-- Select granted authority by user ID -->
    <select id="selectGrantedAuthorityByUserId" resultType="cn.dsc.jk.dto.permission.GrantedAuthorityPermission">
        SELECT p.permission_code
        FROM user_role_rel ur
        INNER JOIN role_permission_rel rp ON ur.role_id = rp.role_id
        INNER JOIN permission p ON rp.permission_id = p.permission_id
        WHERE ur.user_id = #{userId}
    </select>
</mapper>
