<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dsc.jk.mapper.LoginLogMapper">

    <!-- Base Result Map -->
    <resultMap id="baseResultMap" type="cn.dsc.jk.entity.LoginLogEntity">
        <id column="log_id" property="logId" jdbcType="BIGINT"/>
        <result column="login_user_id" property="loginUserId" jdbcType="BIGINT"/>
        <result column="login_account" property="loginAccount" jdbcType="VARCHAR"/>
        <result column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="browser" property="browser" jdbcType="VARCHAR"/>
        <result column="device" property="device" jdbcType="VARCHAR"/>
        <result column="login_action_type" property="loginActionType" jdbcType="VARCHAR"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- Base Column List -->
    <sql id="Base_Column_List">
        log_id,
        login_user_id,
        login_account,
        ip,
        browser,
        device,
        login_action_type,
        created_time
    </sql>

    <!-- Select list with conditions -->
    <select id="selectList" resultMap="baseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM login_log
        <where>
            <if test="loginAccount != null and loginAccount != ''">
                AND login_account LIKE CONCAT('%', #{loginAccount}, '%')
            </if>
            <if test="loginActionType != null and loginActionType != ''">
                AND login_action_type = #{loginActionType}
            </if>
            <if test="startTime != null">
                AND created_time &gt;= #{startTime}
            </if>
            <if test="endTime != null">
                AND created_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY log_id DESC
    </select>

</mapper>

